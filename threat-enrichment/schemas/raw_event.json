{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["event_id", "agent_id", "event_type", "payload", "timestamp"],
  "properties": {
    "event_id": { "type": "string", "format": "uuid" },
    "agent_id": { "type": "string" },
    "event_type": { "type": "string", "enum": ["process", "file", "network", "system"] },
    "payload": { "type": "object" },
    "timestamp": { "type": "string", "format": "date-time" }
  }
}